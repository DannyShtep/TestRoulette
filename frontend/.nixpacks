[phases.build]
cmds = ["npm install", "npm run build"]

[phases.start]
cmd = "npm start" # React dev server, но для статики это не используется напрямую
# Для статических сайтов, Nixpacks обычно не требует start command,
# но если он его просит, можно указать что-то вроде 'serve -s build'
# Однако, Railway для статики обычно сам обслуживает папку staticPublishPath.
# Если возникнет ошибка, попробуйте удалить [phases.start] для фронтенда.

[variables]
NODE_ENV = "production"
